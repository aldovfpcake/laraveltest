<duv class="container" style="margin:100px auto" >
    <div class="row"> 
        <duv class="col-6 offset-3">
           <h4> Agregar una nueva novedad</h4>
           <form action ="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
             <div class="form-group" >
                  <input type="text" class="form-control"
                         placeholder="Titulo" name="titulo">
               </div>
               <div class="form-group" >
                  <input type="textarea" class="form-control"
                         placeholder="subtitulo" name="subtitulo">
               </div>
                <div class="form-group" >
                  <input type="text" class="form-control"
                         placeholder="cuerpo" name="cuerpo">
               </div>
                <div class="form-group" >
                   <input type="file" class="form-control"
                    placeholder="imagen" name="imagen">
                 </div>

               <button type="text" class="btn btn-primary">Guardar</button>
           
           </form>
        </div>     
         {{#if error}}  
             <h5>{{message}}</h5>
         {{/if}}
    </div>
</duv>
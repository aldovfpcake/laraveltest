
<div class="container" style="margin-top:50px;">
    <div class="row">
        <div clas="col">
           <h1>Listado de Novedades</h1>
        </div>
        <div class="col-2 text-right">
           <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus"
            aria-hidden="true"></i>  Nuevo</a>        
            <p class="text-end">hola {{usuario}} </p>
            
        </div>
        <div class="row">
          <div class="col md-12">  
            <table class="table">
                <thead >
                    <tr class="table-dark">
                        <th>#</th>
                        <th>Titulo</th>
                        <th>Imagen</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                  {{#each novedades}}  
                  <tr>
                     <th>{{id}}</th>
                     <td>{{titulo}}</td>
                     <td> {{{imagen}}}   </td> 
                     <td>
                         <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}} "> <i class="fa fa-pencil" aria-hidden="true"></i> </a>
                         <a class="btn btm-primary" href="/admin/novedades/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a> 
                     </td>
                  </tr>   
                  {{/each}}
                 </tbody>
           </div>
            </table>    


        </div>
    </div>
</div>